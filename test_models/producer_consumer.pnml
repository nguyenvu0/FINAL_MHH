<?xml version="1.0" encoding="UTF-8"?>
<pnml xmlns="http://www.pnml.org/version-2009/grammar/pnml">
  <net id="producer_consumer" type="http://www.pnml.org/version-2009/grammar/ptnet">
    <page id="page1">
      <!-- Places -->
      <place id="ready">
        <name><text>Ready</text></name>
        <initialMarking><text>1</text></initialMarking>
      </place>
      <place id="buffer">
        <name><text>Buffer</text></name>
        <initialMarking><text>0</text></initialMarking>
      </place>
      <place id="consumed">
        <name><text>Consumed</text></name>
        <initialMarking><text>0</text></initialMarking>
      </place>
      
      <!-- Transitions -->
      <transition id="produce">
        <name><text>Produce</text></name>
      </transition>
      <transition id="consume">
        <name><text>Consume</text></name>
      </transition>
      
      <!-- Arcs -->
      <arc id="a1" source="ready" target="produce"/>
      <arc id="a2" source="produce" target="buffer"/>
      <arc id="a3" source="buffer" target="consume"/>
      <arc id="a4" source="consume" target="consumed"/>
    </page>
  </net>
</pnml>
